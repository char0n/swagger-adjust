{
  "root": true,
  "env": {
    "es2020": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "extends": ["eslint-config-airbnb-base", "prettier"],
  "plugins": ["eslint-plugin-prettier", "prettier"],
  "rules": {
    "import/order": ["error", {
      "groups": [
        ["builtin", "external", "internal"],
        ["parent", "sibling", "index"]
      ],
      "newlines-between": "always"
    }],
    "prettier/prettier": "error",
    "arrow-body-style": 0
  }
}
